<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.idea3d.idea3d.ui.view.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/guideFragment"
        android:name="com.idea3d.idea3d.ui.view.GuideFragment"
        android:label="fragment_guide"
        tools:layout="@layout/fragment_guide" >
        <action
            android:id="@+id/action_guideFragment_to_solutionFragment"
            app:destination="@id/solutionFragment" />
    </fragment>
    <fragment
        android:id="@+id/calcuFragment"
        android:name="com.idea3d.idea3d.ui.view.CalcuFragment"
        android:label="fragment_calcu"
        tools:layout="@layout/fragment_calcu" />
    <fragment
        android:id="@+id/solutionFragment"
        android:name="com.idea3d.idea3d.ui.view.SolutionFragment"
        android:label="fragment_solucion"
        tools:layout="@layout/fragment_solucion" />
    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.idea3d.idea3d.ui.view.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details" />
</navigation>