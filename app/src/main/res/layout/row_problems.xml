<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="0dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                app:cardElevation="0dp">

                <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imagen"
                android:src="@drawable/poca_resolucion"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/problemaString"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/at_surt_semi_bold"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="16dp"
                    tools:text="problema 1" />

                <TextView
                    android:id="@+id/descripcionString"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1.8"
                    android:fontFamily="@font/at_surt_regular"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    tools:text="desripcion sdkdkepkd sssksksks skksksknssksksksksk" />

            </LinearLayout>


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="15dp">


                <Button
                android:id="@+id/resolucionUno"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/at_surt_regular"
                android:textAllCaps="false"
                app:backgroundTint="?attr/colorSecondaryVariant"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSecondary"
                tools:text="RESOLUCION1" />

                <Button
                android:id="@+id/resolucionDos"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/at_surt_regular"
                tools:text="RESOLUCION2"
                android:textAllCaps="false"
                app:backgroundTint="?attr/colorSecondaryVariant"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp" />


            <Button
                android:id="@+id/resolucionTres"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/at_surt_regular"
                tools:text="RESOLUCION2"
                app:backgroundTint="?attr/colorSecondaryVariant"
                android:textAllCaps="false"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp" />

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>