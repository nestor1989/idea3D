<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:layout_weight="1" />

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/problemaString"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1.2"
            android:fontFamily="@font/roboto_thin"
            tools:text="problema 1"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripcionString"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1.8"
            android:fontFamily="@font/roboto_thin"
            tools:text="desripcion"
            android:textSize="15dp" />

        <Button
            android:id="@+id/resolucionUno"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_thin"
            tools:text="RESOLUCION1"
            android:textAllCaps="false"
            android:textColor="#292727"
            android:textSize="10dp" />


        <Button
            android:id="@+id/resolucionDos"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_thin"
            tools:text="RESOLUCION2"
            android:textAllCaps="false"
            android:textColor="#292727"
            android:textSize="10dp" />


        <Button
            android:id="@+id/resolucionTres"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_thin"
            tools:text="RESOLUCION2"
            android:textAllCaps="false"
            android:textColor="#292727"
            android:textSize="10dp" />


    </LinearLayout>


</LinearLayout>