<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="20dp"

        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
             android:id="@+id/imagen"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
                android:layout_marginEnd="30dp"
                android:src="@drawable/poca_resolucion"/>

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/problemaString"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1.2"
            android:fontFamily="@font/roboto_thin"
            tools:text="problema 1"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripcionString"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1.8"
            android:fontFamily="@font/roboto_thin"
            tools:text="desripcion"
            android:textSize="15dp" />

        <Button
            android:id="@+id/resolucionUno"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_thin"

            android:textAllCaps="false"
            android:textColor="#292727"
            android:textSize="10dp"
            tools:text="RESOLUCION1" />


        <Button
            android:id="@+id/resolucionDos"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_thin"
            tools:text="RESOLUCION2"
            android:textAllCaps="false"
            android:textColor="#292727"
            android:textSize="10dp" />


        <Button
            android:id="@+id/resolucionTres"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_thin"
            tools:text="RESOLUCION2"
            android:textAllCaps="false"
            android:textColor="#292727"
            android:textSize="10dp" />


    </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>