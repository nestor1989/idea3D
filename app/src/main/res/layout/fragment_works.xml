<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.work.WorksFragment"
    android:background="@drawable/gradiente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/at_surt_black"
                android:gravity="center"
                android:text="@string/maker_zone_title"
                android:textColor="@color/white"
                android:textFontWeight="600"
                android:textSize="50sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/logo_contorno"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="80dp"
                android:layout_height="75dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/logo_contorno"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maker_zone_finance"
            style="@style/titlesMakerZone"
            android:padding="15dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="8sp"
                app:cardBackgroundColor="@color/transparent"
                app:strokeColor="@color/teal_idea">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity= "center">

                <TextView
                    android:id="@+id/tvProfits"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/at_surt_semi_bold"
                    android:gravity="center"
                    android:text="$0"
                    android:textColor="@color/white"
                    android:textSize="35sp" />

                <TextView
                        android:id="@+id/tvPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/at_surt_semi_bold"
                        android:gravity="center"
                        android:text="ganancias"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding ="8sp"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity= "center">

                        <TextView
                            android:id="@+id/tvSales"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:fontFamily="@font/at_surt_semi_bold"
                            android:gravity="center"
                            android:padding ="8sp"
                            android:text="$0"
                            android:textColor="@color/white"
                            android:textSize="25sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/at_surt_semi_bold"
                            android:gravity="center"
                            android:text="ventas"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:padding = "8sp"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity= "center">

                        <TextView
                            android:id="@+id/tvCost"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:fontFamily="@font/at_surt_semi_bold"
                            android:gravity="center"
                            android:text="$0"
                            android:textColor="@color/white"
                            android:textSize="25sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/at_surt_semi_bold"
                            android:gravity="center"
                            android:text="costos"
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maker_zone_quick_actions"
            style="@style/titlesMakerZone"
            android:padding="15dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnQuick1"
                app:cardBackgroundColor="@color/transparent"
                app:strokeColor="@color/teal_idea"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp">

                <ImageButton
                    android:id="@+id/button_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    app:tint="@color/teal_idea"
                    android:src="@drawable/ic_add" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnQuick2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/transparent"
                app:strokeColor="@color/teal_idea"
                android:layout_margin="5dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnQuick3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/transparent"
                app:strokeColor="@color/teal_idea"
                android:layout_margin="5dp"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnQuick4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/transparent"
                app:strokeColor="@color/teal_idea" />


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maker_zone_works"
            style="@style/titlesMakerZone"
            android:padding="15dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnfilter1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:layout_margin="5dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnfilter2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:layout_margin="5dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnfilter3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:layout_margin="5dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:padding="5dp">


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnfilter4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:layout_margin="5dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnfilter5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:layout_margin="5dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnfilter6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:layout_margin="5dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnfilter7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:layout_margin="5dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnfilter8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:layout_margin="5dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnfilter9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/transparent"
                    app:strokeColor="@color/teal_idea"
                    android:layout_margin="5dp"/>

            </LinearLayout>

        </LinearLayout>







    </LinearLayout>

</ScrollView>