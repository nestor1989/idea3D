<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.home.BottomSheetNewsFragment">

    <FrameLayout
        android:id="@+id/standard_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:footerDividersEnabled="true" >

            <View
                android:id="@+id/divider8"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:background="?attr/colorSecondary"
                android:visibility="visible" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@drawable/arrow_left_fit"
                    app:elevation="0dp"
                    app:fabSize="mini"
                    app:tint="?attr/colorSecondary" />

                <TextView
                    style="@style/ModalTitles"
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="ihyyifyu"/>

                <ImageButton
                    android:id="@+id/button_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_edit"
                    android:background="@null"
                    app:elevation="0dp"
                    android:layout_gravity="center_vertical"
                    app:fabSize="mini"
                    app:tint="?attr/colorSecondary" />

            </LinearLayout>

            <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_gray"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivPhoto"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:padding="16dp"
                        android:src="@drawable/logoidea"
                        app:civ_border_color="@color/teal_idea"
                        app:civ_border_width="4dp" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:textColor="@color/teal_idea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:fontFamily="@font/at_surt_light"
                        android:textSize="18sp"
                        android:text="11/09/2003" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop ="16dp">
                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/at_surt_light"
                            android:textColor="@color/teal_idea"
                            android:textSize="18sp"
                            android:text="$10000" />

                        <TextView
                            android:layout_gravity="center"
                            android:id="@+id/tvCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/at_surt_light"
                            android:textColor="@color/red"
                            android:textSize="18sp"
                            android:text="$10000" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvClient"
                        android:textColor="?attr/colorOnPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/at_surt_bold"
                        android:maxLines="2"
                        android:padding="16dp"
                        android:textSize="18sp"
                        android:text="Coca-Cola" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/at_surt_light"
                        android:paddingHorizontal="16dp"
                        android:textSize="18sp"
                        android:text="string/b1v0" />


                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/tvDelete"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:layout_marginTop ="25dp"
                android:fontFamily="@font/at_surt_light"
                android:textSize="20sp"
                android:text="@string/delete" />
        </LinearLayout>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>