<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">

    <RelativeLayout
        android:id="@+id/prBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/prError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_rawRes="@raw/bubles"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/tvGood"
        style= "@style/titlesSemiBoldSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/good_night"
        android:layout_marginTop="25sp"
        android:layout_marginHorizontal="20dp" />



         <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
             android:layout_marginHorizontal="20dp"
            android:visibility="visible" />

        <SearchView
            android:id="@+id/search"
            android:elevation="6dp"
            android:translationZ="6dp"
            android:background="@drawable/search_view_style"
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:queryHint="STL"
            android:iconifiedByDefault="false"
            android:focusable="false"
            android:textColorHint = "@color/grey"
            android:queryBackground="@null"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_things"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            tools:listitem="@layout/row_things"
            android:visibility="visible" />

    </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/dialog_news"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        android:visibility="gone"
        tools:visibility="gone"
        android:background="@color/transparent">

        <include
            android:id="@+id/include_news"
            layout="@layout/include_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</FrameLayout>