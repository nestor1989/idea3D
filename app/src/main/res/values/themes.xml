<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Idea3D" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_idea</item>
        <item name="colorPrimaryVariant">@color/blue_idea</item>
        <item name="colorOnPrimary">@color/blue_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">#E8A5DFD6</item>
        <item name="colorOnSecondary">#C67C7676</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SplashTheme" parent="Theme.Idea3D">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>