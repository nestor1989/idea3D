<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Idea3D" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#01363C</item>
        <item name="colorPrimaryVariant">@color/teal_idea</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_idea</item>
        <item name="colorSecondaryVariant">#01363C</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.Idea3D">
        <item name="android:windowBackground">@drawable/splash_dark</item>
    </style>

    <style name="CalendarView">
        <item name="android:background">@color/transparent</item>
        <item name="calendar_date_text_color">@color/blue_dark</item>
        <item name="calendar_day_bar_background">@color/white</item>
        <item name="calendar_day_bar_text_color">@color/grey</item>
        <item name="calendar_day_bar_weekend_text_color">@color/teal_idea</item>
        <item name="calendar_grid_color">@drawable/background_calendar_date</item>
        <item name="calendar_grid_on_selected_dates">true</item>
        <item name="calendar_month_text_color">@color/blue_dark</item>
        <item name="calendar_year_selection_arrows_color">@color/teal_idea</item>
        <item name="calendar_year_selection_background">@color/white</item>
        <item name="calendar_year_selection_text_color">@color/blue_dark</item>
        <item name="android:fontFamily">@font/at_surt_regular</item>
        <item name="calendar_date_background_tint">@color/custom_color_calendar_selector</item>

    </style>

</resources>