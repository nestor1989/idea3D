<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idea3d.idea3d">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".core.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ideal_logo_cua"
        android:label="Idea 3D"
        android:roundIcon="@drawable/idea_logo_circ"
        android:supportsRtl="true"
        android:theme="@style/Theme.Idea3D">

        <activity
            android:name=".ui.view.GuiaActivity"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".ui.view.CalcuActivity"
            android:label="@string/title_activity_calcu"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.view.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>